@model CustomerRegis.Models.Customer
@{
    ViewData["Title"] = "Excluir Cliente";
}
<h1>Excluir Cliente</h1>

<hr />
<table class="table table-sm table-bordered w-50">

    <tbody>

        <tr>
            <th>Nome</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Telefone</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Endereço</th>
            <td>@Model.Address</td>
        </tr>

    </tbody>

</table>

<form asp-action="Delete" method="post" class="mt-3">

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2"
            onclick="return confirm('Tem certeza que deseja excluir?');">
        Excluir
    </button>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</form>
